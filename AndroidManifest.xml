<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.gwangyi.posroid.light"
    android:versionCode="2"
    android:versionName="2.1" >

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="18"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION"/>
    <uses-feature android:required="false" android:name="android.hardware.telephony"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" android:allowBackup="true">
        <activity android:name=".activities.PosroidActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.DeliveryActivity"></activity>
        <activity android:name=".activities.WelfareActivity"></activity>
        <activity android:name=".activities.PreferenceActivity"></activity>
        <activity android:name=".activities.DiscountActivity"></activity>
    </application>

</manifest>